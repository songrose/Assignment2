<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextSystolic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hintSystolic"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextDialostic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintDialostic"
        android:inputType="number" />



    <Button
        android:id="@+id/buttonAddBloodreading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnAddBloodReading" />

    <Button
        android:id="@+id/buttonMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monthly_view" />


    <ListView
        android:id="@+id/lvBloodReading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
